.container {
    height: 100vh;
    display: flex;
    flex-direction: column;
    background: #f5f5f5;
  }
  
  .nav-tabs {
    display: flex;
    background: #fff;
    padding: 10rpx;
    border-bottom: 1rpx solid #eee;
  }
  
  .tab {
    flex: 1;
    text-align: center;
    padding: 20rpx 0;
    font-size: 28rpx;
    color: #666;
  }
  
  .tab.active {
    color: #007AFF;
    border-bottom: 4rpx solid #007AFF;
  }
  
  .content-area {
    flex: 1;
    padding: 20rpx;
  }
  
  .section {
    background: #fff;
    border-radius: 12rpx;
    padding: 20rpx;
    margin-bottom: 20rpx;
  }
  
  .section-title {
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
    color: #333;
  }
  
  .section-subtitle {
    font-size: 28rpx;
    font-weight: bold;
    margin: 20rpx 0;
    color: #666;
  }
  
  .difficulty-item {
    margin: 20rpx 0;
    padding: 15rpx;
    background: #f8f8f8;
    border-radius: 8rpx;
  }
  
  .level-name {
    font-weight: bold;
    margin-right: 20rpx;
    color: #007AFF;
  }
  
  .rules-list, .tips-list, .benefits-list {
    margin: 20rpx 0;
  }
  
  .rule-item, .tip-item, .benefit-item {
    padding: 15rpx;
    margin: 10rpx 0;
    background: #f8f8f8;
    border-radius: 8rpx;
  }
  
  .tip-name {
    font-weight: bold;
    display: block;
    margin-bottom: 10rpx;
    color: #007AFF;
  }
  
  .sudoku-grid-image {
    width: 100%;
    height: 400rpx;
    margin: 20rpx 0;
  }