  <!-- 项目特色 -->
  <view class="highlights">
    <text class="section-title">项目特色</text>
    <view class="highlight-items">
      <view class="highlight-item">
        <image class="highlight-icon" src="{{icons.openSource}}" mode="aspectFit"></image>
        <text class="highlight-text">完全开源</text>
      </view>
      <view class="highlight-item">
        <image class="highlight-icon" src="{{icons.update}}" mode="aspectFit"></image>
        <text class="highlight-text">持续更新</text>
      </view>
      <view class="highlight-item">
        <image class="highlight-icon" src="{{icons.community}}" mode="aspectFit"></image>
        <text class="highlight-text">社区共建</text>
      </view>
    </view>
  </view>

  <!-- 更新计划 -->
  <view class="update-plan">
    <text class="section-title">更新计划</text>
    <view class="plan-items">
      <view class="plan-item">
        <text class="plan-highlight">每月</text>
        <text class="plan-desc">上线1个新功能</text>
      </view>
      <view class="plan-item">
        <text class="plan-highlight">2周</text>
        <text class="plan-desc">1-2次功能优化</text>
      </view>
    </view>
  </view>

  <!-- 开源信息 -->
  <view class="open-source">
    <text class="section-title">开源项目</text>
    <view class="github-info" bindtap="openGithub">
      <image class="github-icon" src="{{icons.github}}" mode="aspectFit"></image>
      <text class="github-text">查看源码</text>
    </view>
  </view>

  <!-- 关注信息 -->
  <view class="follow-section">
    <text class="section-title">关注我们</text>
    <view class="social-links">
      <view class="social-item" bindtap="copyOfficialAccount">
        <image src="{{icons.wechat}}" mode="aspectFit"></image>
      </view>
      <view class="social-item" bindtap="openBilibili">
        <image src="{{icons.bilibili}}" mode="aspectFit"></image>
      </view>
    </view>
  </view>
</view>
