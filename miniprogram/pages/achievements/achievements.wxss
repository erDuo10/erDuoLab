.achievement-page {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.achievement-summary {
  display: flex;
  justify-content: space-around;
  padding: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.achievement-summary .label {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 8rpx;
}

.achievement-summary .value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.category-section {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.category-header {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.category-header .title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.achievement-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  opacity: 0.6;
  transition: opacity 0.3s;
}

.achievement-item.unlocked {
  opacity: 1;
}

.achievement-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
}

.achievement-info {
  flex: 1;
  margin-right: 20rpx;
}

.achievement-name {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  color: #333;
}

.achievement-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.achievement-progress {
  display: flex;
  align-items: center;
  font-size: 24rpx;
}

.achievement-progress progress {
  flex: 1;
  margin-right: 10rpx;
  border-radius: 999rpx;
}

.achievement-rewards {
  text-align: right;
  font-size: 24rpx;
  color: #666;
}

.achievement-rewards .points {
  color: #4CAF50;
  margin-bottom: 4rpx;
}

.achievement-rewards .coins {
  color: #FFC107;
}

.tab-bar {
  display: flex;
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  padding: 16rpx 0;
  position: relative;
}

.tab-item.active {
  color: #4CAF50;
  font-weight: bold;
}

.tab-item.active:after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40%;
  height: 4rpx;
  background: #4CAF50;
  border-radius: 2rpx;
}

.achievement-list {
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}